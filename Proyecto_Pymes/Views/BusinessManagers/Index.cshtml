@model IEnumerable<Proyecto_Pymes.Models.DB.BusinessManager>

@{
    ViewData["Title"] = "Index";
}

<h1 style="color:white;">Administracion </h1>

<p>
    <a asp-action="Create" class="btn btn-warning float-right">Nuevo Registro </a>
<table class="table" style="color:white;">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdNavigation.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdNavigation.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdNavigation.SecondLastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdNavigation.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdNavigation.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdNavigation.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdNavigation.Ci)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdEnterpriseNavigation.GroupName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CorporateNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdNavigation.Name)
                <td>
                        @Html.DisplayFor(modelItem => item.IdNavigation.LastName)
                </td>
                <td>
                        @Html.DisplayFor(modelItem => item.IdNavigation.SecondLastName)
                </td>
                <td>
                        @Html.DisplayFor(modelItem => item.IdNavigation.Email)
                </td>
                <td>
                        @Html.DisplayFor(modelItem => item.IdNavigation.PhoneNumber)
                </td>
                <td>
                        @Html.DisplayFor(modelItem => item.IdNavigation.Gender)
                </td>
                <td>
                        @Html.DisplayFor(modelItem => item.IdNavigation.Ci)
                </td>
                <td>
                        @Html.DisplayFor(modelItem => item.IdEnterpriseNavigation.GroupName)
                </td>
                <td>
                        @Html.DisplayFor(modelItem => item.CorporateNumber)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> ||
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-secondary">
                        <i class="fas fa-trash"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Confirmar Eliminación</h5>
            </div>
            <div class="modal-body">
                ¿Está seguro de que desea eliminar el siguiente registro? <br />
                Nombre: @TempData["Name"] @TempData["lastName"] @TempData["SeconlastName"]
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <a asp-action="ConfirmDelete" asp-route-id="@TempData["BsToDelete"]" class="btn btn-danger">Eliminar</a>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @if (TempData["ShowModalDelete"] as bool? == true)
    {
        <script>
            $(document).ready(function () {
                $('#exampleModal').modal('show');


                $('#exampleModal').on('hidden.bs.modal', function () {

                    $.ajax({
                        url: '/BusinessManagers/UpdateShowModalDelete',
                        method: 'POST',
                        data: { value: false }, // Enviar el valor false al servidor
                        success: function (data) {
                            // Opcional: Puedes realizar acciones adicionales después de cambiar el valor
                        }
                    });
                });
            });
        </script>
    }
}
