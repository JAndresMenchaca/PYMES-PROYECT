@model List<Proyecto_Pymes.Models.DB.Producer>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "_Layout";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.24.0/font/bootstrap-icons.css" rel="stylesheet">
<h1 style="color:rgb(255, 255, 255)" ;>
    Productores
</h1>
<a asp-action="Create" class="btn" style="background-color: rgb(23, 114, 64); 
color:white; margin: 20px 20px 20px 0px; font-size: 20px "> Crear🔨</a>
<table class="table" style="color:rgb(255, 255, 255)">
    <thead>
        <tr>
            <th>
               NOMBRE
            </th>
            <th>
               APELLIDO PATERNO
            </th>
            <th>
                APELLIDO MATERNO
            </th>
            <th>
                CELULAR
            </th>
            <th>
                GENERO
            </th>
            <th>
                CI
            </th>
            <th>
                EMAIL
            </th>        
           
        </tr>
    </thead>
    <tbody>

    
            @foreach (var producer in Model)
            {
            <tr style="color:rgb(255, 255, 255)">             
                <td>@producer.IdNavigation.Name</td>
                <td>@producer.IdNavigation.LastName</td>
                <td>@producer.IdNavigation.SecondLastName</td>
                <td>@producer.IdNavigation.PhoneNumber</td>
                <td>@producer.IdNavigation.Gender</td>
                <td>@producer.IdNavigation.Ci</td>
                <td>@producer.IdNavigation.Email</td>  
                <td>
                    <div class="btn-group">
                        <a asp-action="Edit" asp-route-id="@producer.Id" class="btn" style="background-color: #1c6eba; color: white; font-size: 17px; border-radius: 4px">
                    ✏
                    </a>
                        @* <a asp-action="Details" asp-route-id="@producer.Id" class="btn" style="background-color: #ba851c; color: white;  margin-left: 10px; border-radius: 4px ">
                            📑
                        </a> *@

                         <a asp-action="Delete" asp-route-id="@producer.Id" class="btn" style="background-color:#ba1c1c; color:white; margin-left: 10px; font-size: 17px; border-radius: 4px " data-toggle="modal" data-target="@("#DeleteProducer-" + producer.Id)">
                            🗑</a>
                        @await Html.PartialAsync("DeleteViewPartial",producer)
                    </div>
         
                </td>
            </tr>
            }
      
    </tbody>
</table>


