@model Proyecto_Pymes.Models.DB.TownShip
@{
    ViewData["Title"] = "Create";
}
<h1 style="text-align:center;  color: white">Registrar Nuevo Municipio</h1>
<hr />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <form method="post" action="/TownShips/Create" style="color: white" >
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Nombre del Municipio</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IdTown" class="control-label">Departamento:</label>
                    <select asp-for="IdTown" class="form-control" asp-items="ViewBag.IdTown">
                        <option value="">Seleccione un Departamento</option>
                    </select>
                    <span asp-validation-for="IdTown" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="d-flex justify-content-between">
                        <input type="submit" value="Aceptar" class="btn btn-lg" style="background-color:#15718d; color:white;" />
                        <div>
                            <a asp-action="Index" class="btn btn-lg" style="background-color:#bb2727; color:white;">Cancelar</a>
                        </div>

                    </div>
                </div>
            </form>
        </div>
    </div>
</div>






<div class="modal fade " id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Mensaje</h5>
            </div>
            <div class="modal-body">
                <p>Registro exitoso! <i class="fas fa-check-circle"></i></p>
            </div>
            <div class="modal-footer">
                <a asp-controller="TownShips" asp-action="Index" class="btn btn-warning">Aceptar</a>
            </div>
        </div>
    </div>
</div>





@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    @if (TempData["ShowModal"] as bool? == true)
    {
        <script>
            $(document).ready(function () {
                $('#exampleModalCenter').modal('show');
            });
        </script>
    }
}
