@model Proyecto_Pymes.Models.DB.Manufacturing;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}


<!-- Modal -->
<div class="modal fade" id="DetailManufac-@Model.Id" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 style="color:black" class="modal-title" id="exampleModalLongTitle">Detalle de Producción </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div style="color:black" class="modal-body">
                @if (Model != null && Model.ProductionDetails != null && Model.ProductionDetails.Any())
                {
                    <p><strong>Producto en Producción:</strong> @Model.IdProductNavigation.Name</p>
                    <p><strong>Insumos utilizados en esta producción:</strong></p>
                    <ul>                 
                            @foreach (var detail in Model.ProductionDetails)
                            {
                                <li>
                                @if (detail.IdRawMaterialNavigation.Name != "")
                                {
                                    <strong>Insumo:</strong> @detail.IdRawMaterialNavigation.Name
                                    <span><strong>Cantidad: </strong> @detail.Quantity</span>
                                }      
                                </li>
                            }  
                    </ul>
                    <p><strong>Total del costo Aproximado:</strong> @Model.CostProduction Bs.</p>                   
                }   
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>