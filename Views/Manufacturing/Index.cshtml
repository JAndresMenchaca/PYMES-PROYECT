@model List<Proyecto_Pymes.Models.DB.Manufacturing>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.24.0/font/bootstrap-icons.css" rel="stylesheet">
<h1 style="color: rgb(255, 255, 255)" ;>
    Proceso de Producción
</h1>
<a asp-action="Create" class="btn" style="background-color: rgb(23, 114, 64); 
color:white; margin: 20px 20px 20px 0px; font-size: 20px "> Crear🔨</a>
<table class="table" style="color:rgb(255, 255, 255)">

    <thead>
        <tr>
            <th>
             PRODUCTO
            </th>
            <th>
              CANTIDAD
            </th>
            <th>
              COSTO APROXIMADO DE PRODUCCIÓN
            </th>
        </tr>
    </thead>

    <tbody>


        @foreach (var Manufac in Model)
        {
            <tr>
                <td>@Manufac.IdProductNavigation.Name</td>
                <td>@Manufac.Quantity</td>
                <td>@Manufac.CostProduction</td>
                <td>
                    <div class="btn-group">
                       @* <a asp-action="Edit" asp-route-id="@Manufac.Id" class="btn btn-secondary">
                            <i class="fas fa-edit"></i> Edit
                        </a>*@
                        <a asp-action="Detail" asp-route-id="@Manufac.Id" class="btn" style="background-color: #1c6eba; color: white; font-size: 17px" data-toggle="modal" data-target="@("#DetailManufac-" + Manufac.Id)">
                            📑
                        </a>
                        @await Html.PartialAsync("DetailViewPartial",Manufac)

                        <a asp-action="Delete" asp-route-id="@Manufac.Id" class="btn" style="background-color:#ba1c1c; color:white; margin-left: 10px; font-size: 17px" data-toggle="modal" data-target="@("#DeleteManufac-" + Manufac.Id)">
                             🗑</a>
                        @await Html.PartialAsync("DeleteViewPartial",Manufac)

                       
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>