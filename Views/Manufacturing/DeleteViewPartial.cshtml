@{
}


<!-- Modal -->
<div class="modal fade" id="DeleteManufac-@Model.Id" aria-labelledby="DeleteProductLabel" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 style="color:black" class="modal-title" id="exampleModalLabel">Confirmar Eliminación</h5>
            </div>
            <div style="color:black" class="modal-body">
                ¿Está seguro de que desea eliminar el proseso de Producccion? <br />  
            </div>
            <form action="/Manufacturing/ConfirmDelete" method="post">
                <input hidden asp-for="Id" />
                <input hidden asp-for="IdProductNavigation.Name" />
                <div class="modal-footer">
                    <a asp-action="Index" class="btn btn-secondary" data-dismiss="modal">Cancelar</a>
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                </div>
            </form>
        </div>
    </div>
</div>
