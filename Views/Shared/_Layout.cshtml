@inject IHttpContextAccessor context
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplication1</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/admin-lte/3.1.0/css/adminlte.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" />

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light" id="navPrincipal">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button" style="color: white;"><i class="fas fa-bars"></i></a>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item" id="idSettings">
                    <a class="nav-link" href="#">⚙</a>
                </li>
            </ul>
        </nav>
        <!-- Sidebar -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4 lateralBar">
            @* <a href="#" class="brand-link">
                <span class="brand-text font-weight-light">UNDERGAME</span>
            </a> *@
            <div class="user-panel d-flex" id="sec1">
                <div class="image imgUser">
                    <a asp-controller="Home" asp-action="Index"><img src="~/images/rompecabezas.png" class="img-circle elevation-2" alt="Enterprise Image"></a>
                </div>

                <div class="info" style="margin-left: 18px; padding:auto">
                    <p id="enterprise-name">@context.HttpContext.Session.GetString("Rol")</p>
                </div>
              
            </div>

            <nav class="mt-2">
            <div class="user-panel d-flex" id="sec1">
                <div class="image imgUser">
                    <a href=""><img src="~/images/hombre.png" class="img-circle elevation-2" alt="User Image"></a>
                </div>

                <div class="info" style="margin-left: 18px; padding:auto">
                        <p id="user-name">@context.HttpContext.Session.GetString("UserName")</p>
                </div>
                
            </div>
        <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false" style="margin-top: 30px; margin-left: 8px;">
          <!-- Add icons to the links using the .nav-icon class
               with font-awesome or any other icon font library -->
          <li class="nav-item menu-open">
            <a href="#" class="nav-link">
              <i class="nav-icon fas fa-gamepad"></i>
              <p>
                Overview
                <i class="right fas fa-angle-left"></i>
              </p>
            </a>
            <ul class="nav nav-treeview">
              <li class="nav-item">
                <a asp-controller="Producers" asp-action="Index" class="nav-link">
                  <i class="fa-plane fas nav-icon"></i>
                  <p>Producers</p>
                </a>
              </li>
              <li class="nav-item">
              <a asp-controller="Users" asp-action="Index" class="nav-link">
                  <i class="fas fa-archive nav-icon"></i>
                  <p>Users</p>
              </a>
              </li>
              <li class="nav-item">
                <a asp-controller="People" asp-action="Index" class="nav-link">
                  <i class="fas fa-list-alt nav-icon"></i>
                  <p>Persons</p>
                </a>
              </li>
              <li class="nav-item">
                <a href="../../index3.html" class="nav-link">
                  <i class="fas fa-shopping-bag nav-icon"></i>
                  <p>Products</p>
                </a>
              </li>
              <li class="nav-item">
                <a href="../../index3.html" class="nav-link">
                  <i class="fas fa-users nav-icon"></i>
                  <p>Customers</p>
                </a>
              </li>
            </ul>
          </li>
          <li class="nav-header"><hr></li>
          <li class="nav-item">
            <a asp-action="Users" class="nav-link">
              <i class="nav-icon fas fa-address-card "></i>
              <p>
                User
              </p>
            </a>
          </li>
          <li class="nav-item">
            <a href="../gallery.html" class="nav-link">
              <i class="nav-icon fas fa-cog"></i>
              <p>
                Settings
              </p>
            </a>
          </li>
          
          <li class="nav-item">
            <a href="../../iframe.html" class="nav-link">
              <p style="opacity:.8">Help</p>
            </a>
          </li>
          <li class="nav-item">
            <a href="https://adminlte.io/docs/3.1/" class="nav-link">
              <p style="opacity:.8">Contact us</p>
            </a>
          </li>
          <li class="nav-item">
                <a asp-controller="Home" asp-action="Session" class="nav-link">
                <p style="opacity:.8">Log out</p>
            </a>
          </li>
          
        </ul>
      </nav>
      <!-- /.sidebar-menu -->
        </aside>
        <!-- Content Wrapper -->
        <div class="content-wrapper back">
            <div class="content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </div>
        </div>
        <!-- Footer -->
        <footer class="main-footer">
            <div class="float-right d-none d-sm-inline">
                Version 1.0
            </div>
            &copy; 2023 - WebApplication1
        </footer>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/admin-lte/3.1.0/js/adminlte.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
