@{
}
<!-- Modal -->
<div class="modal fade" id="DeleteProduct-@Model.Id" aria-labelledby="DeleteProductLabel" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 style="color:black" class="modal-title" id="exampleModalLabel">Confirmar Eliminación</h5>
            </div>
            <div style="color:black" class="modal-body">
                ¿Está seguro de que desea eliminar el siguiente registro? <br />
                <div>
                    <p> Asiciasion :  @Model.GroupName</p>
                </div>
            </div>
            <form action="/Enterprise/ConfirmDelete" method="post">
                <input hidden  asp-for="Id" />                          
                <div class="modal-footer">          
                    <a asp-action="Index"  class="btn btn-danger" data-dismiss="modal">Cancelar</a>
                    <button type="submit" class="btn btn-secondary" >Aceptar</button>
                </div>
           </form>
        </div>
    </div>
</div>
